<UserControl x:Class="GACore.Controls.IsConnectedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GACore.Controls"
             xmlns:p="clr-namespace:GACore.Controls.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:LabelContentControl Header="{x:Static p:Resources.UI_IsConnected_Lbl_IsConnected}">
        <CheckBox Grid.Column="1" IsEnabled="False" IsChecked="{Binding Path=IsConnected, Mode=OneWay}"/>
    </local:LabelContentControl>
</UserControl>
