<UserControl x:Class="GACore.Controls.PoseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GACore.Controls"
             xmlns:converters="clr-namespace:GACore.Controls.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:RadToDegStringConverter x:Key="radToDegStringConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <TextBlock>
        <TextBlock.Text>
            <MultiBinding StringFormat="{}X:{0:N2} Y:{1:N2} Heading:{2:N2}">
                <Binding Path="X" />
                <Binding Path="Y" />
                <Binding Path="Heading" Converter="{StaticResource radToDegStringConverter}" />
            </MultiBinding>
        </TextBlock.Text>
    </TextBlock>
</UserControl>
